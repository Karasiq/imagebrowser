// Gallery search form
#image-search-form(title = 'Search images')
    .form-group: input.form-control(ng-model='gallerySearch')

// Gallery pages
#gallery-pagination(style='text-align:center;')
    dir-pagination-controls(pagination-id='gallery')

// Gallery images
#gallery
    a(href='{{ imageFull(image.path) }}', target='_blank', dir-paginate="image in images | filter:gallerySearch | itemsPerPage:28: 'gallery'", pagination-id='gallery', current-page='pagination.images', title='{{ imageTitle(image) }}')
        img(ng-src='{{ imageThumbnail(image.path) }}', ng-click='showImage(image.path); $event.preventDefault()')